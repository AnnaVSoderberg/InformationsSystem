@model Information_System_ASP.Net.Models.Driver

@{
    ViewData["Title"] = "Delete Driver";
}

<h2>Delete Driver</h2>

<p>Are you sure you want to delete this driver?</p>

<div>
    <h4>@Model.DriverName</h4>
    <dl class="row">
        <dt class="col-sm-2">Car Registration</dt>
        <dd class="col-sm-10">@Model.CarReg</dd>

        <dt class="col-sm-2">Responsible Employee</dt>
        <dd class="col-sm-10">@Model.ResponsibleEmployee</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DriverID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
