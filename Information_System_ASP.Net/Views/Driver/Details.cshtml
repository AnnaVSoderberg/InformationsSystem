@model IEnumerable<Information_System_ASP.Net.Models.Event>

@{
    ViewData["Title"] = "Driver Events";
}

<h2>Events for @ViewBag.DriverName</h2>

<!-- Filter section -->
<form method="get" asp-action="Details" asp-route-id="@ViewBag.DriverID" class="form-inline mb-3">
    <div class="form-group">
        <label for="fromDate" class="mr-2">From Date:</label>
        <input type="date" id="fromDate" name="fromDate" value="@ViewBag.FromDate" class="form-control mr-2" />
    </div>
    <div class="form-group">
        <label for="toDate" class="mr-2">To Date:</label>
        <input type="date" id="toDate" name="toDate" value="@ViewBag.ToDate" class="form-control mr-2" />
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<!-- Events table -->
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Logged By</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td>@ev.EventDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@ev.EventDescription</td>
                <td>@ev.LoggedByEmployee</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-controller="Event" asp-route-driverId="@ViewBag.DriverID" class="btn btn-primary">Log New Event</a>
<a asp-action="Index" asp-controller="Driver" class="btn btn-secondary">Back to Drivers</a>
