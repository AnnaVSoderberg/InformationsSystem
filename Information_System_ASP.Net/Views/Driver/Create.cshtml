@model Information_System_ASP.Net.Models.Driver

@{
    ViewData["Title"] = "Create Driver";
}

<h2>Create New Driver</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DriverName"></label>
        <input asp-for="DriverName" class="form-control" />
        <span asp-validation-for="DriverName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CarReg"></label>
        <input asp-for="CarReg" class="form-control" />
        <span asp-validation-for="CarReg" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ResponsibleEmployee"></label>
        <select asp-for="ResponsibleEmployee" class="form-control" asp-items="ViewBag.Employees"></select>
        <span asp-validation-for="ResponsibleEmployee" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
